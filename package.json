{
  "name": "sfdx-js",
  "version": "4.1.0",
  "description": "A node wrapper for Salesforce DX",
  "keywords": [
    "sfdx",
    "node",
    "wrapper",
    "salesforce",
    "dx"
  ],
  "main": "./dist/sfdx-js.umd.js",
  "module": "./dist/sfdx-js.cjs.js",
  "typings": "./dist/types/sfdx-js.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "init-author-email": "sandbox_JSUI@coveo.com",
    "init.author.name": "Coveo",
    "init.author.url": "http://source.coveo.com/"
  },
  "author": "Marc-Antoine Veilleux <maveilleux@coveo.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/coveo/sfdx-js.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prepare": "ts-node tools/semantic-release-prepare",
    "prebuild": "rimraf dist",
    "build": "tsc && rollup -c && rimraf compiled && typedoc --out dist/docs --target cjs --theme minimal src",
    "start": "tsc-watch --onSuccess \"rollup -c\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "prepare-doc": "ts-node tools/gh-pages-prepare",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "precommit": "lint-staged",
    "run-generator": "node tools/generate-files.js",
    "generate": "sfdx force:doc:commands:display --json > commands.json && npm run run-generator",
    "prepush": "npm run test:prod && npm run build",
    "commitmsg": "validate-commit-msg"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/test/"
    ]
  },
  "dependencies": {
    "reflect-metadata": "^0.1.12",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/underscore": "^1.8.9",
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^7.0.0",
    "husky": "^0.14.0",
    "jest": "^23.5.0",
    "jest-cli": "23.5.0",
    "lint-staged": "^7.2.2",
    "lodash.camelcase": "^4.3.0",
    "moment": "^2.22.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.0",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "semantic-release": "^15.9.15",
    "sfdx-generator": "2.0.0",
    "sfdx-prebuilt": "5.9.4",
    "ts-jest": "^23.1.4",
    "ts-node": "^7.0.1",
    "tsc-watch": "^1.0.26",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.1",
    "validate-commit-msg": "^2.14.0"
  }
}
